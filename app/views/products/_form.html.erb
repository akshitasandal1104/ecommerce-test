<%= form_with model: product, local: true do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>

    </div>
  <% end %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :price %>
  <%= form.text_field :price %>
  <fieldset>
    <legend>SubProducts:</legend>
    <%= form.fields_for :sub_products do |sub_product| %>
      <%= render "products/sub_product_fields", formats: [:html], form: sub_product %>
    <% end %>
<!--    <p><%#= form.link_to_add "Add a task", :sub_products %></p>-->
    <%= link_to_add_fields "Add Sub-Products", form, :sub_products %>
  </fieldset>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
